

<li class="talent">

    <div class="col-sm-3">
        <div class="span3 well taldiv">
            <center>
                <img src="{{talentAddress}}" name="aboutme" width="140" height="140" class="img-circle">
                <h5>{{talentName}}</h5>
                <a href="#aboutModal" data-toggle="modal" data-target="#myModal">
                    <em>View My Profile</em>
                </a>
            </center>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title" id="myModalLabel">More About Guy</h4>
            </div>
            <div class="modal-body">
                <center>
                    <img src="{{talentAddress}}" name="aboutme" width="140" height="140" border="0" class="img-circle">
                    </a>
                    <h3 class="media-heading">{{talentName}}
                        <small>Austin, TX</small>
                    </h3>
                    <span>
                        <strong>Hire me as: </strong>
                    </span>
                    <span class="label label-warning"></span>
                    <span class="label label-info">{{jobBar}}</span>
                    <span class="label label-info">{{jobModel}}</span>
                    <span class="label label-info">{{jobServer}}</span>
                    <span class="label label-info">{{jobSecurity}}</span>
                    <span class="label label-info">{{jobSales}}</span>
                </center>
                <hr>
                <center>
                    <p class="text-left">
                        <strong>Bio: </strong>
                        <br> {{bio}}</p>
                    <br>
                </center>
            </div>
            <div class="modal-footer">
                <center>
                    <button type="button" class="btn btn-default" data-dismiss="modal">I've heard enough about Guy</button>
                </center>
            </div>
        </div>
    </div>

</li>