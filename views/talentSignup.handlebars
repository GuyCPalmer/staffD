    <form class="col s12" id='newTalent'>

        <div class="form-group">
            <div class="row">

                    <div class="row">
                        <div class="input-field col s12">
                            <input placeholder="ex: Jon Doe" id="talentName" type="text" autocomplete='name' class="validate">
                            <label for="talentName">Your Full Name</label>
                        </div> 
                    </div>

                    <div class="row">
