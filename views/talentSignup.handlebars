<h1>
    Talent Sign-Up
</h1>

<div class="container">
    <div class="row">

        {{!-- separator --}}
    <div class="col-2"></div>


    <div class="col-8">
        <form class="newTalent">
            <div class="form-group">

                <label for="newTalent">Your Name</label>
                <input type="text" id="newTalent" name="Your Name">

                <label for="talentPhone">Your Phone Number</label>
                <input type="text" id="talentPhone" name="X-(XXX)XXX-XXXX">

                <label for="talentEmail">Your Email Address</label>
                <input type="text" id="talentEmail" name="jon.doe@email.com">

                <label for="address">Your Address</label>
                <input type="text" id="address" name="1111 Road dr. Tx. 111111">

                <label for="SSN">Your Social Security Number</label>
                <input type="text" id="SSN" name="XXX-XX-XXXX">

                {{input type="checkbox" name="Drivers_license" id="drivers"}}
                <label for="dlNumber">Driver License Number</label>
                <input type="text" id="dlNumber" name="Driver License Number">

                {{input type="checkbox" name="TABC License" id="tabc"}}
                <label for="tabc">TABC License Number</label>
                <input type="text" id="tabc" name="TABC License Number">

                {{!-- for uploading Photos --}}
                <script id="file-upload-template" type="textx-handlebars-template">
                    <li class="removable_row">
                        <div class="file-field">
                            <label class="photo" for="{{photo}}"><abbr title="required"></abbr> Photo</label>
                            <input class="photo" id="{{photo}}" name="Personal Photo" type="file"/>
                        </div>
                    </li>
                </script>
                <div class="file-uploader">Photo</div>

                {{!-- ended at making dropdown --}}
            </div>
        </form>
    </div>

        {{!-- separator --}}
    <div class="col-2"></div>
    </div>
</div>