<h1>
    Company Sign-up.
</h1>

<div class="container">

    <div class="col s3"></div>

    <form class="col s12" id='compSignupForm' >
        <div class="form-group">
            

            <div class="row">
                <div class="input-field col s6">
                    <input placeholder="ex: Staffd" id="newCompany" type="text" class="validate">
                    <label for="newCompany">Your Company Name</label>
                </div>
                    <div class="input-field col s6">
                    <input id="coordinatorName" type="text" class="validate">
                    <label for="coordinatorName">Event Coordinator Name
            </div>

            <div class="row">
                <div class="input-field col s12">
                    <input id="purchasing" type="text" class="validate">
                    <label for="purchasing">Purchasing Contact</label>
                </div>
            </div>

            <div class="row">
                <div class="input-field col s12">
                    <input id="companyPhone" type="text" class="validate">
                    <label for="companyPhone">Primary Phone Number</label>
                </div>
            </div>

            <div class="row">
                <div class="input-field col s12">
                    <input id="comAddress" type="text" class="validate">
                    <label for="comAddress">Company Address</label>
                </div>
            </div>

            <div class="row">
                <div class="input-field col s12">
                <input id="comEmail" type="email" class="validate">
                <label for="comEmail">Email</label>
                </div>
            </div>

            <div class="file-field input-field">
                <div class="btn">
                    <span>Picture</span>
                    <input type="file">
                </div>
                <div class="file-path-wrapper">
                    <input class="file-path validate" id="comPic" type="text">
                </div>
            </div>

            <a class="waves-effect waves-light btn">button</a>
        </div>
    </form>


    <div class="col s3"></div>

</div>